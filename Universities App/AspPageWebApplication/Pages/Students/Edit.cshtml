@page
@model AspPageWebApplication.Pages.Students.EditModel
@{
}

@if(Model.Student.Id > 0)
    {
        <h1>Edit Student</h1>
    }
 else
    {
        <h1>Add Student</h1>
    }



<form method="post">
    <div class="form-group">
        <input asp-for="Student.Id" type="hidden" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="Student.Name" 
               placeholder="Enter Student Name"
               class="form-control" />
    </div>

    <div class="form-group">
        <input asp-for="Student.Grade" 
               placeholder="Enter Student Grade"
               class="form-control" />
    </div>



    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="../Universities/Details" 
       asp-route-UniversityId=@Model.UniversityId
       class="btn btn-success">Cancel</a>
</form>

